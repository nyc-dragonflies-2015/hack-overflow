<div class="add-comment">
  <h4>Add a comment</h4>

  <div class="comment-form">
    <%= form_for @comment, url: new_comment_path do |f| %>
      <%= f.text_field :body %>
      <%= f.hidden_field :commentable_type, value: "Question" %>
      <%= f.hidden_field :commentable_id, value: @question.id %>
      <%= f.submit :"Add comment" %>
    <% end %>
  </div>

</div>