
<div class="container">
  <div class="row">
    <div class ="col-md-12">
      <%= render 'question', question: @question %>

      <h6 id="q-comment">Comments</h6>

      <% @question.comments.each do |comment| %>
        <%= render 'comment', comment: comment %>
      <% end %>

      <button id="question-comment-button" class="btn btn-default">Add Comment</button>
      <%= render partial: "/comments/question_comment" %>

      <hr/>

      <h3>Answers</h3>

      <button id="answer-button" class="btn btn-default">Add Answer</button>
      <%= render partial: "/answers/answer_form" %>

        <% @answers.each_with_index do |answer, index| %>
          <div class = "render-question-answer">
            <%= render 'answer', answer: answer, index: index %>
          </div>
          <button id="answer-comment-button-<%= answer.id %>" class="btn btn-default" >Add Comment</button>
          <%= render partial: "/comments/answer_comment", locals: { answer: answer } %>
          <% answer.comments.all.each do |comment| %>
            <%= render 'comment', comment: comment %>
          <% end %>
        <% end %>

      <hr/>
    </div>
  </div>
</div>

