<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Edit Account" %>
<% end %>

<%= form_for @user, url: user_path, method: 'delete' do |f| %>
  <%= f.submit 'Delete Your Account'%>
<%end%>